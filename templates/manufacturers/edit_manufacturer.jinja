{# This template allows the user to edit superpower_products #}
{% extends "base.jinja" %}


{% block content %}
<h2 class="heading">Edit Manufacturer</h2>
<form class="edit-manufacturer-form" method="POST" action="/manufacturers/{{manufacturer.id}}">
    <label for="manufacturer-name">Name:</label>
    <input type="text" name="manufacturer-name" alt="manufacturer-name-input-box" required value="{{manufacturer.name}}">

    <label for="manufacturer-description">Description:</label>
    <input type="text" name="manufacturer-description" alt="manufacturer-description-input-box" required value="{{manufacturer.description}}">

    <label for="manufacturer-email-address">Email Address:</label>
    <input type="text" name="manufacturer-email-address" alt="manufacturer-email-address-input-box" required value="{{manufacturer.email_address}}">

    <label for="manufacturer-location">Location:</label>
    <input type="text" name="manufacturer-location" alt="manufacturer-location-input-box" required value="{{manufacturer.location}}">

    <label for="manufacturer-ID">ID:</label>
    <input type="text" name="manufacturer-id" alt="manufacturer-id-input-box" required value="{{manufacturer.id}}">

    {# <label for="superpower-product-superpower-product-id">Product ID:</label>
    <input type="text" name="superpower-product-id" alt="superpower-product-id-input-box" required> #}

    <input class="edit-manufacturer-button" type="submit" value="Save Edited Manufacturer" alt="edit-manufacturer-button">
</form>
</h2>
{% endblock %}



