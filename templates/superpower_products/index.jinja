        <td>{{ superpower_product.stock_quantity }}</td>
        

        <td>{{ superpower_product.buying_price }}</td>
        <td>{{ superpower_product.selling_price }}</td>
        <td>{{ superpower_product.manufacturer.name }}</td>
        <td><a href="/superpower_products/{{ superpower_product.id }}">{{ superpower_product.id }}</a></td>

        <td>
       {% if superpower_product.stock_quantity <= 0 %}
            <p class="out-of-stock">Out of Stock</p>
        {% elif superpower_product.stock_quantity <= 5 %}
            <p class="low-stock">Low Stock</p>  
        {% else %}
            <p class="stock-available">Stock Available</p>
        {% endif %}
