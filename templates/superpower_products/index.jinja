    <table class="table-labels">
        <th>Name:</th>
        <th>Description:</th>
        <th>Stock Quanity:</th>
        <th>Buying Price:</th>
        <th>Selling Price:</th>
        <th>Manufacturer:</th>
        <th>Product ID:</th>
        <th>Stock Status:</th>
        {% for superpower_product in superpower_products  %}

        <tr>
        <td>{{ superpower_product.name }}</td>
        <td>{{ superpower_product.description }}</td>
        <td>{{ superpower_product.stock_quantity }}</td>
        

        <td>{{ superpower_product.buying_price }}</td>
        <td>{{ superpower_product.selling_price }}</td>
        <td>{{ superpower_product.manufacturer.name }}</td>
        <td>{{ superpower_product.id }}</td>

        <td>
       {% if superpower_product.stock_quantity <= 0 %}
            <p class="out-of-stock">Out of Stock</p>
        {% elif superpower_product.stock_quantity <= 5 %}
