<h2 class="heading">Add New Superpower Product To Inventory</h2>
<form class="add-new-superpower-product-form" method="POST" action="/superpower_products">
    <label for="superpower-product-name">Name:</label>
    <input type="text" name="superpower-product-name" alt="superpower-product-name-input-box" required>

    <label for="superpower-product-description">Description:</label>
    <input type="text" name="superpower-product-description" alt="superpower-product-description-input-box" required>

    <label for="superpower-product-stock-quantity">Stock Quantity:</label>
    <input type="text" name="superpower-product-stock-quantity" alt="superpower-product-stock-quantity-input-box">

    <label for="superpower-product-buying-price">Buying Price:</label>
    <input type="text" name="superpower-product-buying-price" alt="superpower-product-buying-price-input-box">

    <label for="superpower-product-selling-price">Selling Price:</label>
    <input type="text" name="superpower-product-selling-price" alt="superpower-product-selling-price-input-box">

    <label for="superpower-product-manufacturer">Manufacturer:</label>
    <select name="manufacturer-id">
    {% for manufacturer in manufacturers %}
        <option value="{{manufacturer.id}}">{{manufacturer.name}}</option>
    {% endfor %}
    </select>
    {# <label for="superpower-product-superpower-product-id">Product ID:</label>
    <input type="text" name="superpower-product-id" alt="superpower-product-id-input-box" required> #}


    <input class="input-button" class="add-superpower-product-button" type="submit" value="Add New Superpower Product" alt="add-new-superpower-product-button">
</form>

